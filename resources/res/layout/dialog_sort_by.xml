<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#fff" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/root_layout" android:background="#fbe9d5" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
        <TextView android:textSize="16.7sp" android:textStyle="normal" android:textColor="#de000000" android:padding="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sort_by" android:lineSpacingExtra="6.5sp"/>
        <ImageView android:id="@+id/close" android:padding="8dp" android:layout_width="30dp" android:layout_height="30dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="0x7f080362"/>
    </RelativeLayout>
    <RadioGroup android:gravity="start|center_vertical" android:layout_gravity="start|center_vertical" android:id="@+id/radioGroup" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp" android:weightSum="1" android:layout_below="@+id/root_layout">
        <RadioButton android:textSize="18sp" android:textStyle="normal" android:textColor="#de656565" android:gravity="start|center_vertical" android:layout_gravity="start|center_vertical" android:id="@+id/locality" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="@string/my_best" android:buttonTint="@color/colorPrimary"/>
        <RadioButton android:textSize="18sp" android:textStyle="normal" android:textColor="#de656565" android:layout_gravity="start|center_vertical" android:id="@+id/city" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:checked="false" android:text="@string/date" android:buttonTint="@color/colorPrimary"/>
        <RadioButton android:textSize="18sp" android:textStyle="normal" android:textColor="#de656565" android:layout_gravity="start|center_vertical" android:id="@+id/global" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:checked="false" android:text="@string/global" android:buttonTint="@color/colorPrimary"/>
    </RadioGroup>
    <TextView android:textColor="@color/white_color" android:layout_gravity="center" android:id="@+id/apply" android:background="@drawable/leader_board_button_bg" android:paddingLeft="40dp" android:paddingTop="10dp" android:paddingRight="40dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:text="@string/apply" android:layout_below="@+id/radioGroup" android:layout_centerHorizontal="true"/>
</RelativeLayout>
