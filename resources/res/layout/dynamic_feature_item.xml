<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#277fb0" app:cardCornerRadius="10dp" app:cardElevation="3.7dp" app:cardUseCompatPadding="false">
    <RelativeLayout android:id="@+id/root_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/bg" android:layout_width="match_parent" android:layout_height="wrap_content"/>
