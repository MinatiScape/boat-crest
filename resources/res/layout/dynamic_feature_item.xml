        </LinearLayout>
        <ImageView android:visibility="gone" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginRight="5dp" android:src="@color/divider_line_color" android:layout_toRightOf="@+id/item_icon_iv" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
