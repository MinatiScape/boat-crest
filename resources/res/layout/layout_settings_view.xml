<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:tag="layout/layout_settings_view_0" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:id="@+id/setting_view" android:background="@color/white" android:paddingBottom="12dp" android:focusable="true" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="com.mappls.sdk.navigation.ui.common.LockableBottomSheetBehavior">
        <androidx.cardview.widget.CardView android:id="@+id/toolbar_setting" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="52dp" app:cardBackgroundColor="@color/white" app:cardElevation="2dp">
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/close_bottom_sheet" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:srcCompat="@drawable/ic_arrow_back_light"/>
