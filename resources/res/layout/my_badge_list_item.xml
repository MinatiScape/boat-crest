<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:backgroundTint="@color/transparent">
    <RelativeLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/badge_base_layout" android:paddingTop="17dp" android:paddingBottom="17dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp">
        <ImageView android:id="@+id/badgeIv" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginLeft="14dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/text_size_18sp" android:textColor="@color/main_text_color" android:layout_gravity="center" android:id="@+id/badgeName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/stood_first" android:layout_toLeftOf="@+id/badgeInfo" android:layout_toRightOf="@+id/badgeIv" android:layout_centerVertical="true" android:layout_marginStart="12dp"/>
        <TextView android:textSize="@dimen/text_size_18sp" android:textColor="@color/secondary_text_color" android:layout_gravity="center" android:id="@+id/obtainedDate" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toLeftOf="@+id/badgeInfo" android:layout_toRightOf="@+id/badgeIv" android:layout_below="@+id/badgeName" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/badgeInfo" android:layout_width="@dimen/margin_30dp" android:layout_height="@dimen/margin_30dp" android:src="@drawable/info_icon_new_small" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="18dp"/>
    </RelativeLayout>
    <View android:id="@+id/view" android:background="@drawable/list_item_divider_new" android:layout_width="match_parent" android:layout_height="0.5dp"/>
</LinearLayout>
