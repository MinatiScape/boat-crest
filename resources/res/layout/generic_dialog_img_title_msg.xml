    <ImageView android:id="@+id/close_icon" android:visibility="gone" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" style="@style/dialogCrossButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
