    <TextView android:id="@+id/dialog_desc" android:visibility="gone" android:text="@string/enable_location_access_in_the_next_screen" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/message_textView" style="@style/dialogInfoTextStyle"/>
