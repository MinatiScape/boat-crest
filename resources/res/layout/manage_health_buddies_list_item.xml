<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/rl_main_layout" android:background="@color/color_333131" android:layout_width="match_parent" android:layout_height="@dimen/margin_140dp" android:layout_marginLeft="@dimen/margin_17dp" android:layout_marginTop="@dimen/margin_17dp" android:layout_marginRight="@dimen/margin_17dp">
    <RelativeLayout android:id="@+id/rl_list" android:layout_width="match_parent" android:layout_height="@dimen/margin_141dp">
        <RelativeLayout android:gravity="center_vertical" android:id="@+id/detail_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginTop="24dp" android:layout_marginStart="13dp">
            <ImageView android:id="@+id/image" android:background="@android:color/transparent" android:layout_width="56dp" android:layout_height="56dp" android:layout_marginRight="21dp" android:src="0x7f0803b1" android:layout_marginEnd="21dp" android:layout_alignParentStart="true"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toStartOf="@+id/revoke_button" android:layout_toEndOf="@+id/image">
                <TextView android:textSize="15sp" android:textColor="@color/main_text_color" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/medium"/>
                <TextView android:textSize="@dimen/text_size_14sp" android:textColor="@color/color_b3b3b3" android:id="@+id/phone" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_4dp"/>
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/secondary_text_color" android:id="@+id/date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:letterSpacing="0.03"/>
            </LinearLayout>
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/main_text_color" android:gravity="center" android:id="@+id/revoke_button" android:background="@drawable/button_bg" android:visibility="gone" android:layout_width="112dp" android:layout_height="41dp" android:layout_marginEnd="@dimen/margin_10dp" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/button_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_10dp" android:layout_below="@+id/detail_layout" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:layout_marginStart="@dimen/margin_34dp" android:layout_marginEnd="@dimen/margin_34dp">
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/main_text_color" android:gravity="center" android:id="@+id/resend_invite_button" android:background="@drawable/buddies_positive_button_bg" android:layout_width="@dimen/margin_90dp" android:layout_height="@dimen/margin_32dp" android:layout_marginRight="15dp" android:layout_marginEnd="15dp"/>
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/main_text_color" android:gravity="center" android:id="@+id/delete_invite_button" android:layout_width="@dimen/margin_112dp" android:layout_height="@dimen/margin_32dp" android:layout_marginLeft="@dimen/margin_15dp" android:layout_marginStart="@dimen/margin_15dp" style="@style/bold"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/list_item_divider" android:background="@drawable/list_item_divider_new" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
