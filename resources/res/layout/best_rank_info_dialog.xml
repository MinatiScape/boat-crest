<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@drawable/rounded_dialog_background" style="@style/dialogBackgroundStyle">
    <ImageView android:id="@+id/close" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="0x7f080362" app:tint="@color/secondary_text_color" style="@style/dialogCrossButtonStyle"/>
    <TextView android:id="@+id/title" android:layout_marginTop="@dimen/margin_0dp" android:text="@string/my_best_rank" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" style="@style/dialogHeaderTextStyle"/>
    <ImageView android:id="@+id/shield" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_24dp" android:src="0x7f08091a" app:layout_constraintEnd_toEndOf="@+id/title" app:layout_constraintStart_toStartOf="@+id/title" app:layout_constraintTop_toBottomOf="@+id/title"/>
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/rankLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/shield" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/shield">
        <TextView android:textSize="30sp" android:textStyle="bold" android:textColor="@color/text_color_primary" android:gravity="top|center_horizontal" android:id="@+id/myRank" android:layout_width="wrap_content" android:layout_height="50dp" android:text="@string/one" android:maxLines="1"/>
        <TextView android:textSize="16sp" android:textColor="@color/main_text_color" android:gravity="bottom|center_horizontal" android:id="@+id/totalUsers" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/slash_one" android:maxLines="1"/>
    </LinearLayout>
    <TextView android:id="@+id/steps" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/rankLayout" style="@style/dialogInfoTextStyle"/>
    <TextView android:id="@+id/date" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/steps" style="@style/dialogInfoTextStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
