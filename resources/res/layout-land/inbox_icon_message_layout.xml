<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/click_relative_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/body_linear_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
            <RelativeLayout android:id="@+id/media_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <com.clevertap.android.sdk.customviews.RectangleImageView android:id="@+id/media_image" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="fitCenter"/>
                <com.clevertap.android.sdk.customviews.HorizontalSquareImageView android:id="@+id/square_media_image" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="200dp" android:scaleType="centerCrop" android:layout_centerInParent="true"/>
                <FrameLayout android:id="@+id/icon_message_frame_layout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
                <FrameLayout android:id="@+id/icon_progress_frame_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
                    <ProgressBar android:layout_gravity="center" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </FrameLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <LinearLayout android:orientation="horizontal" android:id="@+id/content_relative_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_alignParentLeft="true" android:layout_marginStart="0dp" android:layout_alignParentStart="true">
                    <ImageView android:layout_gravity="center" android:id="@+id/image_icon" android:layout_width="68dp" android:layout_height="68dp" android:layout_marginLeft="8dp" android:layout_marginTop="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp" android:scaleType="fitCenter" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
                    <TextView android:textStyle="bold" android:textColor="@android:color/black" android:id="@+id/messageTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:maxLines="2" android:layout_marginStart="10dp" android:layout_marginEnd="20dp"/>
                </LinearLayout>
                <TextView android:textColor="@android:color/darker_gray" android:id="@+id/messageText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:maxLines="3" android:layout_below="@+id/content_relative_layout" android:layout_marginStart="10dp" android:layout_marginEnd="20dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:gravity="end" android:orientation="horizontal" android:id="@+id/timestamp_linear_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-20dp" android:layout_below="@+id/body_linear_layout">
            <TextView android:textColor="@android:color/darker_gray" android:gravity="end" android:id="@+id/timestamp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_marginEnd="10dp"/>
            <ImageView android:layout_gravity="center" android:id="@+id/read_circle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:src="@drawable/ct_read_circle" android:layout_marginEnd="20dp"/>
        </LinearLayout>
        <View android:id="@+id/div_view" android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/timestamp_linear_layout"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/cta_linear_layout" android:background="@android:color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="44dp" android:weightSum="6">
        <Button android:textSize="14sp" android:textColor="@android:color/holo_blue_light" android:id="@+id/cta_button_1" android:background="@android:color/white" android:padding="2dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
        <Button android:textSize="14sp" android:textColor="@android:color/holo_blue_light" android:id="@+id/cta_button_2" android:background="@android:color/white" android:padding="2dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
        <Button android:textSize="14sp" android:textColor="@android:color/holo_blue_light" android:id="@+id/cta_button_3" android:background="@android:color/white" android:padding="2dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>
