<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/main_bg_color" android:endColor="@color/secondary_text_color" android:angle="90" android:type="linear" android:centerColor="@color/main_bg_color"/>
            <corners android:topLeftRadius="12dp" android:topRightRadius="12dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>
    <item android:left="2dp" android:top="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_bg_color"/>
            <corners android:topLeftRadius="@dimen/margin_8dp" android:topRightRadius="@dimen/margin_12dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>
</layer-list>
