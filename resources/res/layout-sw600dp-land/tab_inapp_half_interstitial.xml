            <Button android:textSize="@dimen/txt_size_inapp_half_button" android:id="@+id/half_interstitial_button1" android:visibility="gone" android:layout_width="0dp" android:layout_height="@dimen/inapp_button_height" android:layout_weight="1"/>
            <Button android:textSize="@dimen/txt_size_inapp_half_button" android:id="@+id/half_interstitial_button2" android:visibility="gone" android:layout_width="0dp" android:layout_height="@dimen/inapp_button_height" android:layout_marginLeft="25dp" android:layout_weight="1" android:layout_marginStart="12dp"/>
        </LinearLayout>
    </RelativeLayout>
    <com.clevertap.android.sdk.customviews.CloseImageView android:layout_gravity="end|top" android:layout_width="40dp" android:layout_height="40dp" android:adjustViewBounds="true"/>
</FrameLayout>
