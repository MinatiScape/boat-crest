<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" android:layout_gravity="center" android:id="@+id/inapp_half_interstitial_frame_layout" android:layout_width="match_parent" android:layout_height="match_parent">
