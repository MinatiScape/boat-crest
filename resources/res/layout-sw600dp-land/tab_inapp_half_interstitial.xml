        <TextView android:textSize="@dimen/txt_size_inapp_half_message" android:gravity="center" android:id="@+id/half_interstitial_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginTop="36dp" android:layout_marginRight="40dp" android:maxLines="3" android:layout_below="@+id/half_interstitial_title" android:layout_centerHorizontal="true" android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
